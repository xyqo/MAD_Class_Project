<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/staffDirectory"
        android:layout_width="335dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#ECF8F8"
        android:drawableLeft="@mipmap/staff"
        android:text="Staff Directory"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:iconTint="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/admissions"
        android:layout_width="335dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ECF8F8"
        android:drawableLeft="@mipmap/admissions"
        android:text="Admissions"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courses" />

    <Button
        android:id="@+id/events_bt"
        android:layout_width="335dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ECF8F8"
        android:drawableLeft="@mipmap/events"
        android:text="Calendar"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textColorHighlight="#00BCD4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffDirectory" />

    <Button
        android:id="@+id/schedule"
        android:layout_width="335dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ECF8F8"
        android:drawableLeft="@mipmap/schedule"
        android:text="Schedule"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admissions" />

    <Button
        android:id="@+id/courses"
        android:layout_width="335dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ECF8F8"
        android:drawableLeft="@mipmap/courses"
        android:text="Courses"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/events_bt" />
</androidx.constraintlayout.widget.ConstraintLayout>