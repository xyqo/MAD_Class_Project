<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".staffDir">

    <ImageView
        android:id="@+id/ucclogo_dir"
        android:layout_width="389dp"
        android:layout_height="67dp"
        android:background="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_cr" />

    <Button
        android:id="@+id/staffDirectory2"
        android:layout_width="388dp"
        android:layout_height="97dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#ECF8F8"
        android:drawableLeft="@mipmap/staff"
        android:text="Staff Directory"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:iconTint="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/staff_List"
        style="@style/Widget.AppCompat.ListView.Menu"
        android:layout_width="393dp"
        android:layout_height="495dp"
        android:textAlignment="center"
        android:divider="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffDirectory2" />

</androidx.constraintlayout.widget.ConstraintLayout>